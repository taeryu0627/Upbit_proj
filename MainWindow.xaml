<Window x:Class="Upbit_proj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Upbit_proj"
        WindowStyle="None"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920"
        DataContext="{Binding Main, Source={StaticResource Locator}}">
    <Viewbox Stretch="Fill">
        <Grid x:Name="LayoutRoot">
            <ContentControl x:Name="ModelPage" Content="{Binding CurrentViewModel}" FontFamily="NanumBarunGothic"/>
            <ContentControl x:Name="Popup" Content="{Binding PopViewModel}" d:IsHidden="True" HorizontalAlignment="Center" VerticalAlignment="Center" Width="1920" Height="1080" />
        </Grid>
    </Viewbox>
</Window>
